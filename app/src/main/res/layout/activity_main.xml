<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:background="@drawable/bg_cal"
                android:padding="8dp"
                android:singleLine="true"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="24sp" />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/layout_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:columnCount="4"
            android:rowCount="5">

            <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_sum"
                android:text="+"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_sub"
                android:text="-"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_multi"
                android:text="*"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:text="0"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_dot"
                android:text="."
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_div"
                android:text="/"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/btn_answer"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:text="="
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_del"
                android:text="DEL"
                android:textSize="18sp" />
            <Button
                android:id="@+id/btn_c"
                android:text="C"
                android:textSize="18sp" />
        </GridLayout>
    </LinearLayout>
</layout>